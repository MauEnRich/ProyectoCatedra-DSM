<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#152238"  android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="32dp"
        android:background="@drawable/card_background" android:elevation="12dp"  android:clipToPadding="false"
        android:clipChildren="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crea una cuenta" android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/emailEditText"
            android:hint="Inrese su email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/input_border" android:textColor="#000000"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:hint="Crea una contraseña"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/input_border" android:textColor="#000000"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/registerButton"
            android:text="Registra"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/gradient_button" android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/goToLogin"
            android:text="¿Ya tienes una cuenta? Inicia sesión?"
            android:textColor="#0D47A1"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>